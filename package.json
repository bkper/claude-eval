{
  "name": "claude-eval",
  "version": "1.0.1",
  "description": "Simple evaluation tool for Claude Code AI agent responses using LLM-as-a-judge methodology.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "claude-eval": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "imgs/"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "dev": "tsc --watch --preserveWatchOutput",
    "dev:run": "node dist/cli.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.88",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "p-limit": "^7.1.0",
    "yaml": "^2.8.1"
  }
}